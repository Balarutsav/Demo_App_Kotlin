<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="User Details"
                android:textSize="@dimen/_26ssp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/edt_fn_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/enter_first_name"
                android:imeOptions="actionNext" />

            <EditText
                android:id="@+id/edt_ln_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/enter_last_name"
            android:imeOptions="actionNext" />

            <EditText
                android:id="@+id/edt_dob_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/select_date_of_birth"
                android:imeOptions="actionNext" />


            <EditText
                android:id="@+id/edt_mn_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:hint="@string/enter_mobile_number"
                android:imeOptions="actionDone" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_10sdp"
           android:gravity="center">
           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/iv_activtymain_add"
               android:layout_width="@dimen/_100sdp"
               android:layout_height="@dimen/_100sdp"
               android:src="@drawable/add_icon">

           </androidx.appcompat.widget.AppCompatImageView>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_submit_activity_main"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/iv_activtymain_add"
               android:layout_marginStart="@dimen/_20sdp"
               android:text="SUBMIT" />
       </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>